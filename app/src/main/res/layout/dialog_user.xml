<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_dialog"
    android:orientation="vertical"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/dialog_profile_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="8dp"
        android:src="@drawable/ic_profile_icon"
        android:layout_gravity="center"
        app:strokeWidth="3dp"
        app:strokeColor="@color/purple"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        />

    <TextView
        android:id="@+id/dialog_mail"
        android:layout_width="wrap_content"
        android:layout_marginVertical="24dp"
        android:layout_marginHorizontal="24dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_change_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_profile_photo"
        android:layout_marginHorizontal="24dp"
        android:textColor="@color/purple"
        android:textAllCaps="false"
        android:background="@drawable/selector_photo_button"/>

    <com.google.android.material.button.MaterialButton
    android:id="@+id/dialog_logout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/logout"
    android:layout_margin="24dp"
    android:textColor="@color/white"
    android:textAllCaps="false"
    android:background="@drawable/review_rounded"
    />

</LinearLayout>